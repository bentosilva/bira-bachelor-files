<web-app>
	<!-- descrição geral (a exibir no manager) -->

	<display-name>Hello World!</display-name>
	<description>
		Uma aplicação já não tão "Hello World!"...
	</description>

	<!-- parâmetros do contexto -->
	
	<context-param>
		<param-name>author-name</param-name>
		<param-value>Ricardo Takashi Kagawa</param-value>
	</context-param>
	
	<context-param>
		<param-name>author-mail</param-name>
		<param-value>ricardo.kagawa@gmail.com</param-value>
	</context-param>
	
	<!-- filtros (ainda não usado) -->
	
	<!-- listeners -->
	
	<listener>
		<listener-class>rtk.database.ContextListener</listener-class>
	</listener>
	
	<!-- servlets -->
	
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>rtk.controller.LoginService</servlet-class>
		<load-on-startup>0</load-on-startup>
		<!-- lower => earlier (ge 0) -->
	</servlet>
	
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<!-- configurações de sessão -->

	<session-config>
		<session-timeout>15</session-timeout>    <!-- minutes -->
	</session-config>

	<!-- MIME mappings (ainda não usado) -->
	
	<!-- páginas principais -->
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index</welcome-file>
		<welcome-file>login</welcome-file>
	</welcome-file-list>
	
	<!-- páginas de erros (ainda não usado) -->
	
	<!-- recursos locais (não usado) -->
	<!-- recursos externos (não usado) -->
	
	<!-- restrições de segurança (ainda não usado) -->
	
	<!-- configurações de login (ainda não usado) -->
	
	<!-- grupos de segurança (ainda não usado) -->
	
	<!-- entradas de ambiente (não usado) -->
	<!-- enterprise java beans (não usado) -->
</web-app>


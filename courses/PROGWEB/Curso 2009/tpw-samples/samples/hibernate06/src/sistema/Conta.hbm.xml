<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="sistema.Conta" table="TCONTA">
        <id name="id" column="TCONTA_ID">
            <generator class="increment"/>
        </id>
	<property name="money" type="float" />

	<set name="users" table="TUSER_TCONTA" inverse="true"> 
		<!-- inverso indica que hibernate ira tomar o caminho inverso da relacao original-->
		<!-- assim hibernate nao precisa criar novamente a relacao -->
		<key column="TCONTA_ID"/>
		<many-to-many column="TUSER_ID" class="sistema.User"/>
	</set>

    </class>

</hibernate-mapping>
